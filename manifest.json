{
  "name": "Product Importer",
  "version": "1.0",
  "manifest_version": 2,
  "description": "It is used to import product from major ecommerce channels to Magento",

  "background": {
    "scripts": ["resource/js/background.js"]
  },

  "icons": {
    "128": "resource/image/Icon.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "clipboardWrite"
  ],

  "browser_action": {
    "default_icon": "resource/image/icon.png",
    "default_title": "Product Import"
  },

  "web_accessible_resources": [
    "*.png",
    "resource/js/jquery-3.2.1.min.js"
  ],

  "content_scripts": [{
    "matches": [
      "https://*.aliexpress.com/*",
      "http://*.aliexpress.com/*",
      "http://*.ebay.com/*",
      "http://*.1688.com/*",
      "http://*.amazon.com/*"
    ],
    "js": ["resource/js/jquery-3.2.1.min.js", "resource/js/content.js"]
  }]

}
